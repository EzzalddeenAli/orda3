<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="faith.changliu.orda3.agent">

    <application
        android:name="faith.changliu.orda3.base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".AgentSplashActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AgentLoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop" />

        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="faith.changliu.orda3.base.activities.AddRequestActivity"
            android:launchMode="singleTop" />

        <activity android:name=".AddOrderActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop" />

    </application>
</manifest>
